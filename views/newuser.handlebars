        font-weight: bold;
        cursor: pointer;
        border-radius: 3px;
    }

    .sub-content {
        height: 40%;
        margin: 10px auto;
        border: 1px solid #e6e6e6;
        padding: 20px 80px;
        background-color: #0fb9b1;
        
    }

    .s-part {
        text-align: center;
        font-size: 10px;
    }

    input:focus {
        background-color: yellow;
    }

    /* tooltip  */
    .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
    }

    .tooltip .tooltiptext {
        visibility: hidden;
        width: 260px;
        background-color: black;
        color: #0fb9b1;
        text-align: center;
        border-radius: 6px;
        padding: 5px 0;
        bottom: 100%;
        left: 50%;
        margin-left: -60px;

        /* Position the tooltip */
        position: absolute;
        z-index: 5;
    }

    .tooltip:hover .tooltiptext {
        visibility: visible;
    }
</style>

<div class="container">
    <div class="main-content">
        <div class="header">
            <img src="assets/logo/logo_small.png" weigth="40" />
        </div>
        <div class="l-part">
            <input type="text" placeholder="Your Name" id="nameInput" name="name" />
            <div class="overlap-text">
                <input type="text" placeholder="Preferred Location" id="locationInput" name="location" />
                <div class="tooltip">Preferred Location?
                    <span class="tooltiptext">Enter your preferred location to meet up (ex. Yonge and Eglinton)</span>
                </div>
            </div>
            <button id="saveBtn" type="button" class="btnAddUserInfo">Save It</button>
        </div>
    </div>
</div>
<div class="sub-content">
