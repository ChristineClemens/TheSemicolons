<style>
    .main-content {
        height: 40%;
        margin: 10px auto;
        background-color: #0fb9b1;
        border: 2px solid #e6e6e6;
        padding: 50px 80px;
    }

    .header {
        margin-bottom: 5px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .header img {
        width: 175px;
        margin: auto;
    }

    #nameInput {
        width: 100%;
        margin-bottom: 10px;
        padding: 8px 12px;
        border: 1px solid #dbdbdb;
        box-sizing: border-box;
        border-radius: 3px;
    }

    #locationInput {
        width: 100%;
        height: 48px;
        margin-bottom: 10px;
        padding: 8px 12px;
        border: 1px solid #dbdbdb;
        box-sizing: border-box;
        border-radius: 3px;
    }

    .overlap-text {
        position: relative;
    }

    .overlap-text a {
        position: absolute;
        top: 8px;
